<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pomodoro.MainPage"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Image
                Source="pomodoro_bot.png"
                SemanticProperties.Description="Cute pomodoro bot waving hi to you!"
                HeightRequest="500"
                HorizontalOptions="Center" />
            <Label x:Name="RemainingTimeLabel" FontSize="Header" Text="0" TextColor="White" HorizontalOptions="Center"></Label>
            <Button Text="Start" Clicked="OnStartButtonClicked"></Button>
            <Button Text="Stop" Clicked="OnStopButtonClicked"></Button>
            <Button Text="Reset" Clicked="OnResetButtonClicked"></Button>
            <Button x:Name="ViewSettings" Text="Settings" Clicked="ViewSettingsButton_Clicked"></Button>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
